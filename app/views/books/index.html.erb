<table>
  <thead>
    <tr>
      <h3>Order a Book</h3>
      <th>Id</th>
      <th>User</th>
      <th>Published at</th>
      <th>Abstract</th>
      <th>Noofpages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.user_id %></td>
        <td><%= book.published_at %></td>
        <td><%= book.abstract %></td>
        <td><%= book.noOfPages %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

